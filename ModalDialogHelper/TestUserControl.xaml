<UserControl
    x:Class="ModalDialogHelper.TestUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModalDialogHelper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="500">

    <Grid Width="500" Height="500" Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding TestString}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Red" />
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ReturnTrueCommand}" HorizontalAlignment="Stretch" Content="True" Margin="5" />
                <Button Command="{Binding ReturnFalseCommand}" HorizontalAlignment="Stretch" Content="False" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
